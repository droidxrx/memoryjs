{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": false,
		"keyofStringsOnly": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"allowJs": false,
		"removeComments": true,
		"pretty": false
	},
	"include": ["./src/*.ts"],
	"exclude": ["./*.js", "./*.json"]
}
